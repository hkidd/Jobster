{{!-- For each application, grab the appropriate info and insert into a card, list, accordion, etc to display on the page  --}}

<div class="card" id = "application-card">
<a href="/application/{{id}}"></a>
  <h5 class="card-header">{{company_name}}</h5>
  <div class="card-body">
    <h5 class="card-title">{{role}}</h5>
    <p class="card-text"><a href="{{job_url}}">{{job_url}}</a></p>
    <h5 class="card-title">Application Status</h5>
    <p class="card-text">{{application_status}}</p>
      {{!-- Interview Info --}}
      <h5 class="card-title">Interview Date</h5>
      <p class="card-text">{{format_date interviews.[0].interview_date}}</p>
      {{#if interviews.[0].thank_you_note_sent}}
      <p class="card-text">Thank You note has been sent!</p>
      {{else}}
      <p class="card-text">Thank You note has not been sent!</p>
      {{/if}}

      {{#if interviews.[0].follow_up_email}}
      <p class="card-text">Follow up email has been sent!</p>
      {{else}}
      <p class="card-text">Follow up email has not been sent!</p>
      {{/if}}
      {{!-- Test Info --}}
      <h5 class="card-title">Test Date</h5>
      <p class="card-text">{{format_date test.test_date}}</p>
      <p class="card-text">Concepts: {{test.concepts}}</p>
      <p class="card-text">Passed: {{test.passed}}</p>
      {{#if test.study_for_test}}
      <p class="card-text">Study for this test!</p>
      {{else}}
      <p class="card-text"></p>
      {{/if}}
    <button type="edit" value = {{id}} class="btn btn-primary editApp"><i class="fas fa-edit"></i> Status</button>
    <button type="edit" value = {{id}} class="btn btn-primary editInt"><i class="fas fa-edit"></i> Int</button>
    <button type="edit" value = {{id}} class="btn btn-primary editTest"><i class="fas fa-edit"></i> Test</button>
  </div>
    <button type="delete" value = {{id}} class="btn btn-primary delete"><i class="fas fa-trash-alt"></i></button>
  <div class="card-footer text-muted">
    <p class="card-text">Submission Date: {{format_date submission_date}}</p>
  </div>
</a>
</div>