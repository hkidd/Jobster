<container class="userInfo">
  <div class="user-profile-card">
    <h2>{{userInfo.first_name}} {{userInfo.last_name}}'s Profile</h2>
    <img src={{userInfo.image_url}} class="img-thumbnail profile-pic" id="profilePicture" alt="User Profile Picture">
    {{!-- Profile Picture Upload --}}
    <div class="mb-3">

      <form action="/single" method="POST" enctype="multipart/form-data">
        <input id="article_file_input" type="file" name="image" style="display: none;">
        <p>Click <a onclick="$('input[id=article_file_input]').click();">here</a> to change your picture and submit!
        <p>
          <button type="submit" class="btn btn-primary btn-lg">Upload</button>
      </form>
    </div>
  </div>

  <br>
  <br>

